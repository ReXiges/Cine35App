<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">


    <EditText
        android:id="@+id/nombreP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/anioP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nombreP"
        android:ems="10"
        android:hint="AÃ±o"
        android:inputType="number" />

    <EditText
        android:id="@+id/keywordsP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/anioP"
        android:ems="10"
        android:hint="keywords"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/actoresP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/keywordsP"
        android:ems="10"
        android:hint="actores"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/directoresP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/actoresP"
        android:ems="10"
        android:hint="directores"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/imagenP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/directoresP"
        android:ems="10"
        android:hint="URL de imagen"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/generoP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imagenP"
        android:ems="10"
        android:hint="genero"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/sinopsisP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/generoP"
        android:ems="10"
        android:hint="Sinopsis"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sinopsisP"
        android:layout_marginTop="50dp"
        android:text="Guardar" />
</RelativeLayout>